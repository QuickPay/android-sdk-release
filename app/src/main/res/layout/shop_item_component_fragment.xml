<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ShopItemComponent">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center_horizontal">

            <ImageView android:layout_width="match_parent"
                       android:layout_height="250px"
                       android:src="@drawable/tshirt"
                       android:id="@+id/shop_item_component_fragment_image"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/shop_item_component_fragment_removebutton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_remove_black_24dp"
                        android:layout_weight="1"/>

                <Button android:id="@+id/shop_item_component_fragment_addbutton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_add_black_24dp"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>
